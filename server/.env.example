DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wholesale_crm
PORT=3010
NODE_ENV=development
JWT_SECRET=dev_jwt_secret_change_me

# dev-only; bypass subscription gating (set to 1 to allow access when trial/period ended locally)
DEV_BILLING_BYPASS=0

# Firebase Admin SDK (required for production token verification)
# The project ID is required in all environments
FIREBASE_PROJECT_ID=dealflowos

# Service account credentials (required in production, optional in dev)
# Option 1: JSON string (recommended for cloud deployments)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"dealflowos",...}
#
# Option 2: Path to service account JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json
#
# Option 3: Google Application Default Credentials (for GCP environments)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
