{
  "name": "dealflowos-server",
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "NODE_ENV=development DEV_AUTH_BYPASS=1 tsx watch -r ./src/env.cjs src/server.ts",
    "dev:diag": "NODE_ENV=development DEV_AUTH_BYPASS=1 DEV_DIAGNOSTICS=1 tsx watch -r ./src/env.cjs src/server.ts",
    "dev:lite": "NODE_ENV=development DEV_AUTH_BYPASS=1 tsx watch -r ./src/env.cjs src/dev.server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "postinstall": "prisma generate --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.0",
    "luxon": "^3.7.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "stripe": "^16.12.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/luxon": "^3.4.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.5",
    "@types/stripe": "^8.0.417",
    "prisma": "6.15.0",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2"
  }
}
