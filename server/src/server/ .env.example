- import * as dotenv from "dotenv";
- dotenv.config();
+ import "dotenv/config";


# DealflowOS Server Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# DATABASE (Required for Prisma migrate/dev)
# =============================================================================

# PostgreSQL connection string
# Example for local development:
DATABASE_URL=postgresql://<USER>@localhost:5432/dealflowos_dev?schema=public
# Replace <USER> with your PostgreSQL username

# =============================================================================
# STRIPE BILLING (Required for subscription features)
# =============================================================================

# Stripe secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_...

# Stripe webhook secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_...

# Tier-specific Stripe Price IDs (monthly subscription products)
# Create these in Stripe Dashboard > Products > Add Product > Add Price
STRIPE_PRICE_BRONZE_MONTHLY=price_...   # $19.99/mo + 14-day trial (Bronze only)
STRIPE_PRICE_SILVER_MONTHLY=price_...   # $49.99/mo (no trial)
STRIPE_PRICE_GOLD_MONTHLY=price_...     # $99.99/mo (no trial)

# =============================================================================
# FRONTEND
# =============================================================================

FRONTEND_URL=http://localhost:5173

# =============================================================================
# DEVELOPMENT
# =============================================================================

NODE_ENV=development
DEV_AUTH_BYPASS=1
DEV_DIAGNOSTICS=0